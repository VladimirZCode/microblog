{% extends 'base.html.twig' %}

{% block title %}{{ post.title }}{% endblock %}
{% block body %}
    <p>ID: {{ id }}</p>
    <h2>{{ post.title }}</h2>
    <p>{{ post.text }}</p>
    <p>{{ post.date|date('H:i:s') }}</p>
    <p>{{ 500|price }}</p>
    <p>Current locale: {{ locale }}</p>
    <p>{{ message }}</p>
    <p>{{ app.environment }}</p>
    <p>{{ app.user }}</p>
    <p>{{ app.request }}</p>
    <p>{{ app.session.isStarted() }}</p>
    <p>{{ app.debug }}</p>
{% endblock %}
